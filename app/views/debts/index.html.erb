<h1>All your debts</h1>

<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Sum</th>
      <th>Description</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @debts.each do |debt| %>
    <tr>
      <td><%= debt.sum %></td>
      <td><%= debt.description %></td>
      <td><%= debt.deal_date %></td>
    </tr>
    <% end %>
  </tbody>
</table>
