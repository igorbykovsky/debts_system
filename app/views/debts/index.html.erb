<h1>All your debts</h1>

<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Date</th>
      <th>Sum</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @debts.each do |debt| %>
    <tr>
      <td><%= debt.deal_date %></td>
      <td><%= debt.sum %> BYN</td>
      <td><%= debt.description %></td>
      <td>
        <button class="btn btn-outline-info"><%= link_to 'Details', debt_path(debt) %></button>
        <button class="btn btn-outline-danger"><%= link_to 'In counting', debt_path(debt),
                                      method: :delete, data: { confirm: 'Are you sure?' }%></button>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
