<%= form_with(model: [@debtor, @debt], local: true) do |f| %>
  <% if @debt.errors.any? %>
    <div class="alert alert-danger">
      <h2>
        <%= @debt.errors.count %>
        <%= t('common.errors') %>
      </h2>
      <ul>
        <% @debt.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :sum %>
    <%= f.text_field(:sum, {:class => 'form-control'}) %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_field(:description, {:class => 'form-control'})%>
  </p>
  <p>
    <%= f.label :deal_date %>
    <%= f.date_select :deal_date%>
  </p>
  <p>
    <%= f.submit({:class => 'btn btn-success'}) %>
  </p>
<% end %>

<%= link_to 'Back', debtor_path(@debtor), :class => 'btn btn-outline-secondary' %>