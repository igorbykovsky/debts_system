<%= form_with(model: [@debtor, @debt], local: true) do |f| %>
  <% if @debt.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@debt.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @debt.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    Sum<br>
    <%= f.text_field(:sum, {:class => 'form-control'}) %>
  </p>
  <p>
