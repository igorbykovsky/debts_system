    <%= f.text_field(:description, {:class => 'form-control'})%>
  </p>
  <p>
    Date<br>
    <%= f.date_select :deal_date%>
  </p>
  <p>
    <%= f.submit({:class => 'btn btn-success'}) %>
  </p>
<% end %>

<button class="btn btn-outline-secondary"><%= link_to 'Back', debtor_path(@debtor)%></button>