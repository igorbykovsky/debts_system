<h1>Details</h1>

<table class="table table-striped table-sm">
  <thead>
  <tr>
    <th>Date</th>
    <th>Sum</th>
    <th>Description</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
      <td><%= @debt.deal_date %></td>
      <td><%= @debt.sum %> BYN</td>
      <td><%= @debt.description %></td>
      <td>
        <button class="btn btn-outline-danger"><%= link_to 'In Counting', debt_path(@debt),
                                                           method: :delete, data: { confirm: 'Are you sure?' }%></button>
        <button class="btn btn-outline-warning"><%= link_to 'Edit', edit_debt_path(@debt) %></button>
      </td>
  </tbody>
</table>

<button class="btn btn-outline-secondary"><%= link_to 'Back', debts_path%></button>


