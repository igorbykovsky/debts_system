<h1>Add new Debtor</h1>

<%= form_with(scope: :debtor, url: debtors_path, local: true) do |f| %>
  <% if @debtor.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@debtor.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @debtor.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    Debtor<br>
    <%= f.text_field(:name, {:class => 'form-control'}) %>
  </p>
  <p>
    Group<br>
    <%= f.select(:group, [['Friend'], ['Collegue'], ['Family'], ['Another']], {:class => 'btn btn-danger dropdown-toggle'}) %>
  </p>
  <p>
    <%= f.submit({:class => 'btn btn-success'}) %>
  </p>
<% end %>

<button class="btn btn-outline-secondary"><%= link_to 'Back', debtors_path%></button>
