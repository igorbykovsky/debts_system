<%= form_with(model: @debtor, local: true) do |f| %>
  <% if @debtor.errors.any? %>
    <div class="alert alert-danger">
      <h2>
        <%= t('common.errors') %>
      </h2>
      <ul>
        <% @debtor.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %>
    <%= f.text_field(:name, {:class => 'form-control'}) %>
  </p>
  <p>
    <%= f.label :group %>
    <%= f.select(:group, [[t('.friend')], [t('.colleague')], [t('.family')], [t('.another')]], {:class => 'form-control'}) %>
  </p>
  <p>
    <%= f.submit({:class => 'btn btn-success'}) %>
  </p>
<% end %>

<%= link_to t('common.back'), debtors_path, :class => 'btn btn-outline-secondary'%>